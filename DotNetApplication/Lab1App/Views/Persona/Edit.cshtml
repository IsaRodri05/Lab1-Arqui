@model Lab1App.Models.Entities.Persona

@{
    ViewData["Title"] = "Editar Persona";
}

<h2>@ViewData["Title"]</h2>

<h4>Persona</h4>
<hr />

<form asp-action="Edit">
    <div class="form-group">
        <label for="Cc">CC</label>
        <input type="text" class="form-control" id="Cc" name="Cc" value="@Model.Cc" readonly />
    </div>
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
    </div>
    <div class="form-group">
        <label for="Apellido">Apellido</label>
        <input type="text" class="form-control" id="Apellido" name="Apellido" value="@Model.Apellido" required />
    </div>
    <div class="form-group">
        <label for="Genero">Género</label>
        <input type="text" class="form-control" id="Genero" name="Genero" value="@Model.Genero" required />
    </div>
    <div class="form-group">
        <label for="Edad">Edad</label>
        <input type="number" class="form-control" id="Edad" name="Edad" value="@Model.Edad" required />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancelar</a>
    </div>
</form>
