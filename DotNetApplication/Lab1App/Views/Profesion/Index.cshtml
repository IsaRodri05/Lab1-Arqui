@model IEnumerable<Lab1App.Models.Entities.Profesion>

@{
    ViewData["Title"] = "Profesiones";
}

<h1>Lista de Profesiones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Profesión</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var profesion in Model)
        {
            <tr>
                <td>@profesion.Nom</td>
                <td>@profesion.Des</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@profesion.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@profesion.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
